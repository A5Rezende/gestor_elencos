<%- include('./includes/head') %>
<%- include('./includes/nav') %>

<!-- INDEX - INICIO -->

<div style="width: 99%; border: 0px; padding: 0px; display: flex; justify-content: center; text-align: center;">
    <div class="row">
        <div class="col-lg-12 my-3">

            <% if(lastPart == 'elenco') { %> <h1 class="text-center">Elenco Principal</h1> <% } %>
            <% if(lastPart == 'base') { %> <h1 class="text-center">Base</h1> <% } %>
            <% if(lastPart == 'compras') { %> <h1 class="text-center">Compras</h1> <% } %>
            <% if(lastPart == 'vendas') { %> <h1 class="text-center">Vendas</h1> <% } %>
            <p class="text-center lead">Seus Jogadores</p>
    
            <%- include('includes/messages') %>
    
            <% if(jogadores.length > 0) { %>
    
            <div class="responsive-table">
                <table class="table my-3" style="font-size:small;">
                    <tr>
                        <th>nome</th>
                        <th>posição</th>
                        <th>idade</th>
                        <th>altura</th>
                        <th>overal</th>
                        <th>time</th>
                        <th>salario</th>
                        <th>importancia</th>
                        <th>tipo</th>
                        <th>situação</th>
                        <th>Potencial minimo</th>
                        <th>Potencial maximo</th>
                        <th>Pontos Fracos</th>
                        <th>Pontos Fortes</th>
                        <th></th>
                        <th></th>
                    </tr>
                    <% jogadores.forEach(jogador => { %>
                    <tr>
                        <td><%= jogador.nome %></td>
                        <td><%= jogador.posicao %></td>
                        <td><%= jogador.idade %></td>
                        <td><%= jogador.altura %></td>
                        <td><%= jogador.overal %></td>
                        <td><%= jogador.time %></td>
                        <td><%= jogador.salario %></td>
                        <td><%= jogador.importancia %></td>
                        <td><%= jogador.tipo %></td>
                        <td><%= jogador.situacao_contrato %></td>
                        <td><%= jogador.potencial_minimo %></td>
                        <td><%= jogador.potencial_maximo %></td>
                        <td><%= jogador.pontos_fracos %></td>
                        <td><%= jogador.pontos_fortes %></td>
                        <td><a href="/jogador/index/<%= jogador._id %>">Editar</a></td>
                        <td><a href="/<%= lastPart %>/delete/<%= jogador._id %>">Excluir</a></td>
                    </tr>
                <% }); %>
                </table>
            </div>

            <% } else { %>
            <p>Não há jogadores na sua lista</p>
            <% } %>

        </div>
    </div>
</div>

<!-- INDEX - FINAL -->

<%- include('./includes/footer') %>